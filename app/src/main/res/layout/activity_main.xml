<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joann.chen.flymetabstrip.MainActivity">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <com.joann.chen.flymetabstrip.widget.FlymeTabStrip
            android:id="@+id/tabStrip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorHeight="3dp"
            app:indicatorMargin="24dp"
            app:indicatorTextColor="#282828"
            app:indicatorTextSize="18sp"
            app:selectedIndicatorTextSize="18sp"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"/>

</RelativeLayout>
